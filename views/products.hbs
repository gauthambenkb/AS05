<link rel="stylesheet" href="https://bootswatch.com/3/darkly/bootstrap.min.css">
<div class="row">
    <div class="col-md-12">
        <h2>products <a href="/products/add" class="btn btn-success pull-right">Add Post</a></h2>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Product&nbsp;ID</th>
                        <th>Title</th>
                        <th>Product&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{#formatDate productDate}}{{/formatDate}}</td>
                        <td><a href="/products?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td><a class="btn btn-danger" href="/products/delete/{{id}}">remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless products}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>
</div>